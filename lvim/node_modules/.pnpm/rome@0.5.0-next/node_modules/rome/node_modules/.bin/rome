#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/henri/.config/lvim/node_modules/.pnpm/rome@0.5.0-next/node_modules/rome/bin/node_modules:/home/henri/.config/lvim/node_modules/.pnpm/rome@0.5.0-next/node_modules/rome/node_modules:/home/henri/.config/lvim/node_modules/.pnpm/rome@0.5.0-next/node_modules:/home/henri/.config/lvim/node_modules/.pnpm/node_modules:/home/henri/.config/lvim/node_modules:/home/henri/.config/node_modules:/home/henri/node_modules:/home/node_modules:/node_modules"
else
  export NODE_PATH="$NODE_PATH:/home/henri/.config/lvim/node_modules/.pnpm/rome@0.5.0-next/node_modules/rome/bin/node_modules:/home/henri/.config/lvim/node_modules/.pnpm/rome@0.5.0-next/node_modules/rome/node_modules:/home/henri/.config/lvim/node_modules/.pnpm/rome@0.5.0-next/node_modules:/home/henri/.config/lvim/node_modules/.pnpm/node_modules:/home/henri/.config/lvim/node_modules:/home/henri/.config/node_modules:/home/henri/node_modules:/home/node_modules:/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/rome" "$@"
else
  exec node  "$basedir/../../bin/rome" "$@"
fi
