{
  "kustomize-base": {
    "prefix": "ku-base",
    "body": [
      "apiVersion: kustomize.config.k8s.io/v1beta1",
      "kind: Kustomization\n",
      "resources:",
      "- base"
    ]
  },
  "kustomize-patch": {
    "prefix": "ku-patch",
    "body": [
      "patches:",
      "\t- target:",
      "\t\tkind: {0:k8s target}",
      "\t\tname: {1:target name}",
      "\t  patch: |-",
      "\t\t\t- op: {2: operation}",
      "\t\t\tpath: {3: path}",
      "\t\t\tvalue: \"{4: value}\""
    ]
  },
  "kustomize-overlays": {
    "prefix": "ku-overlays",
    "body": [
      "apiVersion: kustomize.config.k8s.io/v1beta1",
      "kind: Kustomization\n",
      "resources:",
      "- ../../base"
    ]
  },
  "kustomize-helm": {
    "prefix": "ku-helm",
    "body": [
      "helmCharts:",
      "- name: {0:helm-name}",
      "\tversion: {1:version}",
      "\trepo: {2:chart-repo}",
      "\tvaluesFile: {3:values.yaml}",
      "\tnamespace: {4:helm}",
      "\treleaseName: {5:helm}"
    ]
  },
  "kubernetes-role": {
    "prefix": "k-role",
    "body": [
      "apiVersion: rbac.authorization.k8s.io/v1",
      "kind: Role",
      "metadata:",
      "\tname: {}",
      "rules:",
      "- apiGroups:",
      "\t- \"\"",
      "\tresources:",
      "\t- events",
      "\tverbs:",
      "\t- create",
      "\t- list"
    ]
  },
  "kubernetes-rolebinding": {
    "prefix": "k-rolebinding",
    "body": [
      "apiVersion: rbac.authorization.k8s.io/v1",
      "kind: RoleBinding",
      "metadata:",
      "\tname:{0: name}",
      "roleRef:",
      "\tapiGroup: rbac.authorization.k8s.io",
      "\tkind: Role",
      "\tname: {0: name}",
      "subjects:",
      "- kind: ServiceAccount",
      "\tname: {0: name}"
    ]
  }
}
